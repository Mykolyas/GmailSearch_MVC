@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gmail Search App</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/gmail-responsive.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        .main-container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 15px;
        }

        header {
            background-color: #ffffff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
            padding: 20px 0;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-control, .btn {
            border-radius: 0.5rem;
        }

        .modal-content {
            border-radius: 0.75rem;
        }

        footer {
            padding: 0 0 0 20px;
            text-align: start;
            font-size: 0.875rem;
            color: #6c757d;
        }

        table th, table td {
            vertical-align: middle !important;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="loadingOverlay" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.7); z-index:9999; justify-content:center; align-items:center;">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <header class="py-3 bg-white shadow-sm">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8 col-12 text-md-start text-center">
                    <h1 class="fw-bold mb-0">Gmail Search App</h1>
                    <p class="text-muted mb-0">Шукайте та переглядайте ваші листи в Gmail</p>
                </div>
                <div class="col-md-4 col-12 text-md-end text-center mt-md-0 mt-2">
                    <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="material-icons align-middle me-1">logout</i> Вийти
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>


    <main class="main-container">
        @RenderBody()
    </main>

    <footer>
        <p>© 2025 Gmail Search App</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
